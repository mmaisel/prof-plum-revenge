# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Game Lobby Page
GET     /                           controllers.Clueless.index()
POST     /                           controllers.Clueless.join()

# Game Board
GET     /club/:club_uuid             controllers.Clueless.club(club_uuid: Integer, player_name, player_uuid: Integer)
GET     /assets/javascripts/plum.js  controllers.Clueless.plumJs(player_name, player_uuid, club_uuid)


# Game API
GET     /api/club/:club_uuid                             controllers.ClubAPI.index(club_uuid: Integer)
POST    /api/club/:club_uuid/play                        controllers.ClubAPI.playturn(club_uuid: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

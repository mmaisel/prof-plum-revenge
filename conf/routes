# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# game Main Lobby
GET     /                           controllers.Club.index()
POST     /                           controllers.Club.join()

# game Room that display a Gameboard
GET     /club/:game_uuid             controllers.Club.game(game_uuid: Integer, player_name, player_uuid: Integer)
GET     /assets/javascripts/plum.js  controllers.Club.plumJs(player_name, player_uuid, game_uuid)


# Game API
GET     /api/game/:game_uuid                             controllers.Clueless.index(game_uuid: Integer)
POST    /api/game/:game_uuid/send                        controllers.Clueless.sendMessage(game_uuid: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

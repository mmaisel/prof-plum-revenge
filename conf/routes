# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Game Lobby Page
GET     /                           controllers.Clueless.index()

# Game Board
GET     /game/:uuid                 controllers.Clueless.gameboard(uuid: Long)

# Game API
GET     /api/game/:uuid                             controllers.GameAPI.index(uuid: Long)
POST    /api/game/:uuid/playturn                    controllers.GameAPI.playturn(uuid: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
